<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:cxf="http://camel.apache.org/schema/cxf"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd         http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <cxf:rsServer address="http://localhost:8080/rest" id="cxfConsumer" serviceClass="org.wildfly.camel.examples.cxf.jaxrs.GreetingService"/>
    <!-- If available, we use jboss.bind.address instead of localhost -->
    <cxf:rsClient
        address="http://{{sys:jboss.bind.address:localhost}}:8080/rest"
        id="cxfProducer" serviceClass="org.wildfly.camel.examples.cxf.jaxrs.GreetingService"/>
    <bean
        class="org.wildfly.camel.examples.cxf.jaxrs.GreetingsProcessor" id="greetingsProcessor"/>
    <camelContext id="cxfrs-camel-context" xmlns="http://camel.apache.org/schema/spring">
        <!--
         This route defines a CXF producer endpoint which invokes a greeting REST service.

         CamelCxfRsServlet sends the required name parameter to the service by populating them
         within the message exchange body.
        -->
        <route id="directToCxfrsBeanRoute">
            <from id="directConsumer" uri="direct:start"/>
            <setHeader headerName="operationName" id="setHeaderOperationName">
                <simple>greet</simple>
            </setHeader>
            <setHeader headerName="CamelCxfRsUsingHttpAPI" id="setHeaderCamelCxfRsUsingHttpAPI">
                <constant>false</constant>
            </setHeader>
            <to id="cxfrsProducer" uri="cxfrs:bean:cxfProducer"/>
        </route>
        <!--
            This route defines a CXF consumer endpoint which handles requests made to the greeting REST service.

            GreetingsProcessor constructs a String greeting response to return back to the JAX-RS client.
        -->
        <route id="cxfConsumerToProcessorRoute">
            <from id="cxfrsConsumer" uri="cxfrs:bean:cxfConsumer"/>
            <process id="processor" ref="greetingsProcessor"/>
        </route>
    </camelContext>
</beans>
